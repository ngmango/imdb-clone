<html>
    <head>
        <title>Home</title>
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/css/bootstrap.min.css">
        <link rel="stylesheet" href="/styles.css">        
    </head>

    <body>

        


        <div class="container">
            <h1 class="text-center">Movie Database</h1>

            <div>

                <form action='/search' method='GET' align="center">
                    <input type='text' name="movieTitle">
                    <input type="submit">
                    
                </form>
            </div>

            <% for (let i=0; i <movieList.length; i++){  %>

            <a class="movie-link" href=<%= '/movie/' +movieList[i].id  %>>
            <div class="media movie-list-item">
                <div class="media-left">
                    <div class="poster-container">
                        <img class="media-object movie-poster" src=<%= movieList[i].poster %> />
                    </div>
                </div>
                <div class="media-body">
                    <h4 class="media-heading">
                        <%= movieList[i].title %>
                        <span class="badge"><%= movieList[i].imdbRating %></span>
                    </h4>
                    <div>
                        <%= movieList[i].plot %>
                    </div>
                    <div class="released-date">
                        Released: <%= movieList[i].released %>
                    </div>
                </div>
            </div>
            </a>
            
            <% } %>

        </div>
    </body>
</html>

